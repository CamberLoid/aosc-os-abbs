abinfo "Appending -Wno-error=array-parameter to CFLAGS, CXXFLAGS ..."
export CFLAGS="${CFLAGS} -Wno-error=array-parameter"
export CXXFLAGS="${CXXFLAGS} -Wno-error=array-parameter"

abinfo "Aggregating AB{C,CXX,LD}FLAGS for SMPlayer ..."
export ABCFLAGS="${CPPFLAGS} ${CFLAGS}"
export ABCXXFLAGS="${CPPFLAGS} ${CXXFLAGS}"
export ABLDFLAGS="${LDFLAGS}"
