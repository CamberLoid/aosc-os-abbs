PKGNAME=tdeedu
PKGSEC=Trinity
PKGDEP="tdelibs tde-common-cmake"
BUILDDEP="doxygen"
PKGDES="Educational applications for Trinity Desktop Environment"

# libnums no longer shipped with OCaml.
